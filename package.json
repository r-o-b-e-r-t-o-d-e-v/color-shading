{
  "name": "color-shading",
  "version": "1.0.0",
  "description": "This is a quick tool to generate the color shading for a given base color. It is developed in such a way that the output generated will match TailwindCSS color variables.",
  "main": "index.js",
  "scripts": {
    "shade": "node index.js --baseColor='#434343' --baseColorName='brand-black'",
    "shade-variation": "node index.js --baseColor='#434343' --baseColorName='brand-black' --variationFactor=3.85",
    "shade-json": "node index-file.js --jsonFile='colors.json'",
    "shade-json-variation": "node index-file.js --jsonFile='colors.json' --variationFactor=5"
  },
  "keywords": [
    "color",
    "shading",
    "tool",
    "script"
  ],
  "author": "robertomdev",
  "license": "ISC",
  "dependencies": {
    "tinycolor2": "^1.6.0"
  }
}
